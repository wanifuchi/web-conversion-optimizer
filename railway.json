{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "scraper-service/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "NODE_ENV": {
      "default": "production"
    },
    "PORT": {
      "default": "3001"
    },
    "API_KEY": {
      "description": "API key for authenticating requests to the scraper service"
    },
    "LIGHTHOUSE_TIMEOUT": {
      "default": "60000"
    },
    "PUPPETEER_TIMEOUT": {
      "default": "30000"
    },
    "MAX_CONCURRENT_BROWSERS": {
      "default": "2"
    },
    "ENABLE_SCREENSHOTS": {
      "default": "true"
    },
    "SCREENSHOT_FORMAT": {
      "default": "webp"
    },
    "SCREENSHOT_QUALITY": {
      "default": "80"
    },
    "USER_AGENT": {
      "default": "Mozilla/5.0 (compatible; WCO-Analyzer/1.0; +https://wco-analyzer.vercel.app)"
    },
    "CHROME_FLAGS": {
      "default": "--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-extensions,--no-first-run,--disable-default-apps"
    },
    "MEMORY_LIMIT": {
      "default": "1024"
    }
  },
  "regions": [
    "us-west1"
  ]
}