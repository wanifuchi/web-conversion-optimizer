# =================================
# Web Conversion Optimizer Environment Variables
# =================================

# ============ AI APIs ============
# OpenAI API for GPT-4o analysis
OPENAI_API_KEY=sk-...

# Anthropic API for Claude analysis  
ANTHROPIC_API_KEY=sk-ant-...

# ============ Vercel Services ============
# Vercel KV (Redis) for job queue and temporary data
KV_URL=redis://...
KV_REST_API_URL=https://...
KV_REST_API_TOKEN=...
KV_REST_API_READ_ONLY_TOKEN=...

# Vercel Postgres for persistent data
POSTGRES_URL=postgres://...
POSTGRES_PRISMA_URL=postgres://...
POSTGRES_URL_NON_POOLING=postgres://...
POSTGRES_USER=...
POSTGRES_HOST=...
POSTGRES_PASSWORD=...
POSTGRES_DATABASE=...

# ============ External APIs ============
# Google PageSpeed Insights API
GOOGLE_PAGESPEED_API_KEY=...

# Cloudinary for image storage and optimization
CLOUDINARY_CLOUD_NAME=...
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...

# ============ Scraper Service ============
# Railway deployed Puppeteer service
SCRAPER_SERVICE_URL=https://...
SCRAPER_SERVICE_API_KEY=...

# ============ Authentication ============
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=...

# OAuth providers (optional)
GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...
GITHUB_CLIENT_ID=...
GITHUB_CLIENT_SECRET=...

# ============ Application Settings ============
# Application environment
NODE_ENV=development
APP_URL=http://localhost:3000

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_REQUESTS_PER_HOUR=100

# Analysis settings
MAX_ANALYSIS_TIMEOUT=300000
MAX_CONCURRENT_ANALYSES=3
CACHE_TTL_HOURS=24

# ============ Monitoring & Logging ============
# Sentry for error tracking (optional)
SENTRY_DSN=...

# LogTail for structured logging (optional)
LOGTAIL_TOKEN=...

# ============ Development Only ============
# Database URL for local development
DATABASE_URL=file:./dev.db

# Local Redis for development
REDIS_URL=redis://localhost:6379